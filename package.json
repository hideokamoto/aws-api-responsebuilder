{
  "name": "aws-api-responsebuilder",
  "version": "0.4.1",
  "description": "API gateway response builder",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "rollup -c",
    "tsc": "tsc",
    "test": "jest",
    "doc": "typedoc --out docs libs/",
    "lint": "eslint 'libs/**/*.{ts,tsx}'",
    "test:watch": "jest --watch",
    "test:dev": "jest --watch --silent=false --verbose false --coverage"
  },
  "keywords": [
    "aws",
    "api",
    "api gateway"
  ],
  "bugs": {
    "url": "https://github.com/hideokamoto/aws-api-responsebuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/aws-api-responsebuilder.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.18",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "@typescript-eslint/parser": "^1.1.1",
    "@typescript-eslint/typescript-estree": "^1.1.1",
    "eslint": "^5.12.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lint-staged": "^8.1.1",
    "husky": "^1.3.1",
    "aws-sdk": "^2.387.0",
    "jest": "^23.6.0",
    "rollup": "^1.12.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "ts-jest": "^23.10.5",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/__tests__/*/*.+(ts|tsx|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
