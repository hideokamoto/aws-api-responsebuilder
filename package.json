{
  "name": "aws-api-responsebuilder",
  "version": "1.0.3",
  "description": "API gateway response builder",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "rollup -c",
    "tsc": "tsc",
    "test": "jest",
    "doc": "typedoc --out docs libs/ && touch docs/.nojekyll",
    "lint": "eslint 'libs/**/*.{ts,tsx}'",
    "postversion": "npm run push:tag",
    "push:tag": "git push origin $(git describe --abbrev=0 --tags)",
    "test:watch": "jest --watch",
    "test:dev": "jest --watch --silent=false --verbose false --coverage"
  },
  "keywords": [
    "aws",
    "api",
    "api gateway"
  ],
  "bugs": {
    "url": "https://github.com/hideokamoto/aws-api-responsebuilder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hideokamoto/aws-api-responsebuilder.git"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "8.10.31",
    "@types/jest": "23.3.14",
    "@types/node": "10.14.17",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "@typescript-eslint/typescript-estree": "1.13.0",
    "aws-sdk": "2.524.0",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "1.3.1",
    "jest": "24.9.0",
    "lint-staged": "8.2.1",
    "rollup": "1.21.2",
    "rollup-plugin-typescript2": "0.20.1",
    "ts-jest": "23.10.5",
    "typedoc": "0.17.7",
    "typescript": "3.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/__tests__/*/*.+(ts|tsx|js)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
